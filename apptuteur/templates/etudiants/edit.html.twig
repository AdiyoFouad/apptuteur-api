{% extends 'base.html.twig' %}

{% block body %}
<div class="container mt-5">
    <div class="d-flex gap-2 align-items-center mb-3">
        <button class="btn btn-secondary" onclick="window.history.back()">Retour</button>
        <h1>Modifier un Ã©tudiant</h1>
    </div>
    <div class="card shadow-sm p-4 mx-auto" style="max-width: 600px;">
        {{ form_start(form) }}

        <div class="mb-3">
            {{ form_label(form.nom, null, {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.nom) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.prenom, null, {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.prenom, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.prenom) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.formation, null, {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.formation, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.formation) }}
        </div>

        <div class="mb-3 text-center">
            <button type="submit" class="btn btn-primary">Enregistrer</button>
        </div>

        {{ form_end(form) }}
    </div>
</div>
{% endblock %}
