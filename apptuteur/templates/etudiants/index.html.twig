{% extends 'base.html.twig' %}

{% block body %}
<h1>Liste des étudiants</h1>

<a href="{{ path('etudiant_new') }}" class="btn btn-primary mb-3">Ajouter un étudiant</a>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th scope="col">Nom</th>
            <th scope="col">Prénom</th>
            <th scope="col">Formation</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        {% for e in etudiants %}
            <tr>
                <td>{{ e.nom }}</td>
                <td>{{ e.prenom }}</td>
                <td>{{ e.formation }}</td>
                <td>
                    <a href="#" class="btn btn-info btn-sm">Voir visites</a>
                    <a href="#" class="btn btn-success btn-sm">Ajouter une visite</a>
                    <a href="{{ path('etudiant_edit', {id: e.id}) }}" class="btn btn-warning btn-sm">Modifier</a>
                    <a href="{{ path('etudiant_delete', {id: e.id}) }}" class="btn btn-danger btn-sm" onclick="return confirm('Êtes-vous sûr de vouloir supprimer cet étudiant ?')">Supprimer</a>
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>
{% endblock %}
